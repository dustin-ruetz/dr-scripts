{
  "name": "dr-scripts",
  "version": "0.0.0-semantically-released",
  "description": "CLI toolbox providing common scripts for Node.js projects.",
  "scripts": {
    "format": "node ./src/ format",
    "lint": "node ./src/ lint",
    "init-repo": "node ./src/ init-repo",
    "test": "node ./src/ test",
    "test:coverage": "node ./src/ test --coverage"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./src/ commit-msg",
      "pre-commit": "node ./src/ pre-commit"
    }
  },
  "homepage": "https://github.com/dustin-ruetz/dr-scripts/#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/dustin-ruetz/dr-scripts.git"
  },
  "author": "Dustin Ruetz",
  "license": "MIT",
  "bin": {
    "dr-scripts": "./src/index.js"
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 6"
  },
  "dependencies": {
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@prettier/plugin-pug": "^1.13.5",
    "arrify": "^2.0.1",
    "babel-jest": "^26.6.3",
    "cosmiconfig": "^7.0.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "doctoc": "^2.0.0",
    "eslint": "^7.23.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.1.6",
    "husky": "^4.3.8",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "lodash.has": "^4.5.2",
    "prettier": "^2.2.1",
    "read-pkg-up": "^7.0.1",
    "which": "^2.0.2",
    "yargs-parser": "^20.2.7"
  }
}
