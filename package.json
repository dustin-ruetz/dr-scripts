{
  "name": "dr-scripts",
  "version": "0.0.0-semantically-released",
  "description": "CLI toolbox providing common scripts for Node.js projects.",
  "scripts": {
    "format": "node ./src/ format",
    "lint": "node ./src/ lint",
    "init-repo": "node ./src/ init-repo",
    "test": "node ./src/ test",
    "test:coverage": "node ./src/ test --coverage"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./src/ commit-msg",
      "pre-commit": "node ./src/ pre-commit"
    }
  },
  "homepage": "https://github.com/dustin-ruetz/dr-scripts/#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/dustin-ruetz/dr-scripts.git"
  },
  "author": "Dustin Ruetz",
  "license": "MIT",
  "bin": {
    "dr-scripts": "./src/index.js"
  },
  "engines": {
    "node": ">= 12.13.0",
    "npm": ">= 6"
  },
  "dependenciesComments": {
    "prettier": [
      "Prettier recommends specifying an exact version (i.e. not prefixed with a ^ caret)",
      "to ensure that everyone using it installs the exact same version",
      "https://prettier.io/docs/en/install.html#summary"
    ]
  },
  "dependencies": {
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@prettier/plugin-pug": "^1.15.2",
    "arrify": "^2.0.1",
    "babel-jest": "^27.0.2",
    "cosmiconfig": "^7.0.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "doctoc": "^2.0.1",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.1.7",
    "husky": "^4.3.8",
    "is-ci": "^3.0.0",
    "jest": "^27.0.4",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "lodash.has": "^4.5.2",
    "prettier": "2.3.1",
    "read-pkg-up": "^7.0.1",
    "which": "^2.0.2",
    "yargs-parser": "^20.2.7"
  }
